generator client {
  provider = "prisma-client-js"
  output   = "../dist/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(CLIENT)
  createdAt DateTime  @default(now())
  bookings  Booking[]

  @@map("users")
}

// Barber model
model Barber {
  id          String            @id @default(cuid())
  name        String
  document    String            @unique
  specialties BarberSpecialty[]
  bookings    Booking[]

  @@map("barbers")
}

// Specialty model
model Specialty {
  id      String            @id @default(cuid())
  label   String            @unique
  barbers BarberSpecialty[]

  @@map("specialties")
}

// BarberSpecialty model
model BarberSpecialty {
  barberId    String
  specialtyId String

  barber    Barber    @relation(fields: [barberId], references: [id])
  specialty Specialty @relation(fields: [specialtyId], references: [id])

  @@id([barberId, specialtyId])
  @@map("barber_specialties")
}

// Booking model
model Booking {
  id         String    @id @default(cuid())
  date       DateTime
  canceledAt DateTime?
  userId     String
  barberId   String

  user   User   @relation(fields: [userId], references: [id])
  barber Barber @relation(fields: [barberId], references: [id])

  @@unique([barberId, date])
  @@index([userId])
  @@index([barberId])
  @@map("bookings")
}

// Role enum
enum Role {
  ADMIN
  CLIENT
  // BARBER 
}
